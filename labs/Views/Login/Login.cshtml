@model labs.Models.User

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
</head>
<body>
    <div>
        <h3 style="color:hotpink">Sign in</h3>
        <i style="color:red">@TempData["error"]</i><br />
        @using (Html.BeginForm("Authenticate", "Login", FormMethod.Post))
        {
            <table>
                <tr>
                    <td>User Name: </td>
                    <td> @Html.TextBoxFor(m => m.UserName)</td>
                    <td><div style="color:red">@Html.ValidationMessageFor(x => x.UserName)</div></td>
                </tr>
                <tr>
                    <td>Password: </td>
                    <td> @Html.PasswordFor(m => m.Password)</td>
                    <td><div style="color:red">@Html.ValidationMessageFor(x => x.Password)</div></td>
                </tr>
                <tr>
                    <td><input id="Submit1" name="Submit" type="submit" value="Login" /></td>
                </tr>
            </table>
        }

        <p>
            <div style="color:red">@ViewBag.message</div>
        </p>

    </div>
</body>
</html>
